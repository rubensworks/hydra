<?xml version="1.0" encoding="UTF-8"?>

<resources>
    <style name="Theme.Hydra.Light" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Hydra.ActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/Hydra.ActionButton.Overflow</item>
    </style>


    <style name="Theme.Hydra.Light.CenteredBig" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Hydra.ActionBar.CenteredBig</item>
        <item name="android:actionOverflowButtonStyle">@style/Hydra.ActionButton.Overflow</item>
    </style>

    <style name="Hydra.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:textColor">@color/ugent_white</item>
        <item name="android:titleTextStyle">@style/Hydra.ActionBar.TitleTextStyle</item>
        <item name="android:icon">@drawable/logo</item>
    </style>

    <style name="Hydra.ActionBar.CenteredBig" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:textColor">@color/ugent_white</item>
        <item name="android:titleTextStyle">@style/Hydra.ActionBar.TitleTextStyle</item>
        <item name="android:height">80dip</item>
    </style>

    <style name="Hydra.ActionBar.TitleTextStyle" parent="@style/TextAppearance.Holo.Medium">
        <item name="android:textColor">@color/ugent_yellow_light</item>
    </style>
    <style name="Hydra.ActionButton.Overflow" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_moreoverflow</item>
    </style>

    <!-- imported styles from android sdk -->
    <style name="TextAppearance.Holo.Medium" parent="@android:style/TextAppearance.Medium" />
    <style name="TextAppearance.Holo.Widget.ActionBar.Title" parent="@style/TextAppearance.Holo.Medium" />
</resources>
